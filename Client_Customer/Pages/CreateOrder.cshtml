@page
@model CreateOrderModel
@{
    ViewData["Title"] = "Create a New Order";
    bool userIsCustomer = Model.clientType.Equals("customer");
    if (userIsCustomer)
    {
        ViewData["Message"] = "You place, we ship...or whatever";
    }
    else { ViewData["Message"] = "CONTRACTORS CAN NOT CREATE ORDERS"; }
}


<div class="container-fluid ">
    <div class="row" id="form-wrapper">

        <h1 class="page-header text-center">
            <b>
                @ViewData["Title"]<br />
                <small>@ViewData["Message"]</small>
            </b>
        </h1>
        @if (userIsCustomer)
        {
            <div class="col-md-8 col-md-offset-2">
                <!-- Specifying which page this form will be posted to + that it should be POSTed-->
                <!--<div class="form-group">
                    <label>Company ID</label>
                    <input asp-for="Order.companyID" class="form-control" placeholder="Company ID" />
                </div>-->
                <form asp-page="CreateOrder" method="post">
                    <div class="form-group">
                        <label>Pick up address</label>
                        <input asp-for="Order.pickUpAddress.street" class="form-control" placeholder="Vejlevej 25" />
                    </div>

                    <div class="form-group row">
                        <div class="form-group col-md-6">
                            <label>City</label>
                            <input asp-for="Order.pickUpAddress.city" class="form-control" placeholder="Horsens" />
                        </div>

                        <div class="form-group col-md-2">
                            <label>Zip</label>
                            <input asp-for="Order.pickUpAddress.zipCode" class="form-control" placeholder="8700" />
                        </div>
                        <div class="form-group col-md-4">
                            <label>State</label>
                            <input asp-for="Order.pickUpAddress.country" class="form-control" placeholder="Denmark" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Drop off address</label>
                        <input asp-for="Order.dropOffAddress.street" class="form-control" placeholder="Horsensvej 2" />
                    </div>

                    <div class="form-group row">
                        <div class="form-group col-md-6">
                            <label>City</label>
                            <input asp-for="Order.dropOffAddress.city" class="form-control" placeholder="Vejle" />
                        </div>

                        <div class="form-group col-md-2">
                            <label>Zip</label>
                            <input asp-for="Order.dropOffAddress.zipCode" class="form-control" placeholder="8624" />
                        </div>
                        <div class="form-group col-md-4">
                            <label>State</label>
                            <input asp-for="Order.dropOffAddress.country" class="form-control" placeholder="Denmark" />
                        </div>
                    </div>




                    <div class="form-group row">
                        <div class="form-group col-md-6">
                            <label>legit Pick up date</label>
                            <div class="input-group date form_datetime" data-date-format="dd-mm-yyyy hh:mm:ss">
                                <input asp-for="Order.pickUpDeadline" class="form-control" placeholder="Pick up" readonly />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>legit Drop off date</label>
                            <div class="input-group date form_datetime" data-date-format="dd-mm-yyyy hh:mm:ss">
                                <input asp-for="Order.dropOffDeadline" class="form-control" placeholder="Drop off" readonly />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Package content description</label>
                        <textarea rows="10" cols="100" asp-for="Order.contentDescription" class="form-control"></textarea>
                    </div>

                    <div class="form-group row">
                        <div class="form-group col-md-4">
                            <label>Package size</label>
                            <input asp-for="Order.size" class="form-control" placeholder="meters" />
                        </div>

                        <div class="form-group col-md-4">
                            <label>Package weight</label>
                            <input asp-for="Order.weight" class="form-control" placeholder="kilos" />
                        </div>
                        <div class="form-group col-md-4">
                            <label>Container size</label>
                            <input asp-for="Order.containerSize" class="form-control" placeholder="Container size" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Order price</label>
                        <input asp-for="Order.price" class="form-control" placeholder="$" />
                    </div>
                    <hr />
                    <button type="submit" class="pull-left btn btn-outline btn-danger btn-lg" id="place-order-btn">Place Order</button>
                </form>

            </div>
        }
    </div>
</div>

